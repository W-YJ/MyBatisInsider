<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 定义别名 -->
    <typeAliases>
        <!-- 单个别名的定义 alias：别名 type：别名映射的类型-->
        <!--<typeAlias type="po.User" alias="user"/>-->

        <!-- 批量别名定义 指定包路径，自动扫描包下面的pojo，定义别名，别名默认为类名（首字母大小写都可以）-->
        <package name="po"/>
    </typeAliases>


    <!-- 加载mapper.xml，如果将和spring整合后，可以使用整合包中提供的mapper扫描器，此处的mappers就可不用配置了。 -->
    <mappers>
        <!--加载原始dao使用的user.xml-->
        <mapper resource="sqlmap/User.xml"/>

        <package name="mapper"/>
    </mappers>
</configuration>